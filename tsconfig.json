{
    "compilerOptions": {
      /* 1. –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –≤–µ—Ä—Å–∏–∏ JS (—á—Ç–æ–±—ã —Ä–∞–±–æ—Ç–∞–ª–æ import.meta) */
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "bundler", 
      "lib": ["ESNext", "DOM"],
  
      /* 2. –°—Ç—Ä–æ–≥–æ—Å—Ç—å (—á—Ç–æ–±—ã TS —Ä–µ–∞–ª—å–Ω–æ –ø–æ–º–æ–≥–∞–ª –∏—Å–∫–∞—Ç—å –±–∞–≥–∏) */
      "strict": true,
      "noImplicitAny": false, /* –ú–æ–∂–Ω–æ –ø–æ—Å—Ç–∞–≤–∏—Ç—å true, –µ—Å–ª–∏ —Ö–æ—á–µ—à—å –ø–∏—Å–∞—Ç—å —Ç–∏–ø—ã –≤–µ–∑–¥–µ */
      
      /* 3. –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –¥–ª—è Vue –∏ Vite */
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      
      /* üëá –ì–õ–ê–í–ù–û–ï: –≠—Ç–æ —É—á–∏—Ç TS –ø–æ–Ω–∏–º–∞—Ç—å –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ Vite (.env) */
      "types": ["vite/client"],
  
      /* 4. –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ø—É—Ç–µ–π (—á—Ç–æ–±—ã –ø–∏—Å–∞—Ç—å @/components –≤–º–µ—Å—Ç–æ ../../components) */
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      
      /* –ù–µ —Å–æ–∑–¥–∞–≤–∞—Ç—å .js —Ñ–∞–π–ª—ã –ø—Ä–∏ –ø—Ä–æ–≤–µ—Ä–∫–µ (—Å–±–æ—Ä–∫—É –¥–µ–ª–∞–µ—Ç Vite) */
      "noEmit": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["node_modules"]
  }